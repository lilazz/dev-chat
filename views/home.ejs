<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Chat - home</title>
	
	<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.2/css/fontawesome.min.css">
	<link rel="stylesheet" href="/css/style.css">
</head>
<body>
	<%- //include partials/navbar.ejs %>

	<div class="col-md-12">
		<form action="/result" method="post">
			<div class="form-group ad-30" style="margin-top:8px;">
				<div class="input-group search-style">
					<input class="form-control new-search-bar" name="category" id="search" placeholder="Enter your club name" type="text">
					<span class="input-group-btn">
						<button class="btn input-btn" type="" id="search-form">Search</button>
					</span>
				</div>
			</div>
		</form>
	</div>

	<div class="col-md-12">
		<input type="hidden" id="nameUser" value="<%= user.userName %>">
		<input type="hidden" id="nameImg" value="<%= user.userImage %>">
		<div class="">
			<div class="row">
				<div class="col-md-3">
					<div class="row">
						<div class="col-md-12">
							<div class="filter-container">
								<div class="card">
									<form action="/result" method="post">
										<div class="content">
											<p class="filter">
												FILTER
											</p>
											<hr/>
											<select class="form-control" name="category" id="category">
												<option value="">Filter by category</option>
												<% lodash.forEach(category, function(value) { %>
												<option value="<%= value._id %>"><%= value._id %></option>
												<% })%>
												
											</select>
											<div class="clearfix"></div>
											<button class="btn add-apply">Apply</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-9">
					<div>
						<% lodash.forEach(chunks, function(val){ %>
						<div class="category-list">
							<div class="row">
								<% lodash.forEach(val, function(val2){ %>
								<form action="/home" method="post" id="favourite">
									<div class="item col-md-4">
										<a style="text-decoration: none;" href="/group/<%= val2.name.replace(/ /g, "-") %>">
										<div class="thumbnail">
											<img src="https://zmeeva-chatapp.s3.amazonaws.com/<%= val2.image %>" alt="">
											<div class="caption">
												<h4>
													<%= val2.name %> (<%= val2.fans.length %>)
														
													</h4>
												<div class="row">
													<div class="col-xs-12 col-md-6">
														<p>
															<%= val2.category %>
														</p>
													</div>
													<div class="col-xs-12 col-md-6">
														<input type="hidden" name="id" value="<%= val2._id %>" id="id">
														<input type="hidden" name="clubName" value="<%= val2.name %>" id="clubName">
														<button class="btn add-fav">
															Add to Favourite
														</button>
													</div>
												</div>
											</div>
										</div>
										</a>
									</div>
								</form>
								<% }) %>
							</div>
						</div>
						<% }) %>
					</div>
				</div>
			</div>
		</div>
	</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="/js/params.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/messageLink.js"></script>
<script src="/js/group/sendRequest.js"></script>
<script src="/js/home.js"></script>

<script src="/js/global.js"></script>	



</body>
</html>